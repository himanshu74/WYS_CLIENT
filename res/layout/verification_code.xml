<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="100dp"
    android:background="@drawable/signup_dialog_shape" >

    <RelativeLayout
        android:id="@+id/rel_bg_image"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="20dp" >

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel_code"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_bg_image"
        android:layout_marginTop="40dp" >

        <EditText
            android:id="@+id/et_code"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:textSize="18sp"
            android:background="@drawable/apptheme_edit_text_holo_light"
            android:maxLength="4"
            android:hint="Verification code" />
    </RelativeLayout>

  
    <RelativeLayout
        android:id="@+id/rel_verify"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rel_code"
        android:layout_marginTop="40dp" >

        <Button
            android:id="@+id/btn_verify"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:background="@drawable/blue_theme_button_selector"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="Verify"
            android:textColor="#FFFFFF" />

        <Button
            android:id="@+id/btn_resend"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/blue_theme_button_selector"
            android:paddingLeft="10dp"
            android:text="Resend Code"
            android:textColor="#FFFFFF" />
    </RelativeLayout>



</RelativeLayout>